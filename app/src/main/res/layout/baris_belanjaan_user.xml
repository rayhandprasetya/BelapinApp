<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginBottom="2dp"
    app:contentPadding="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/belanjaanId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: 1234"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24/02/2023"
            android:layout_toStartOf="@id/next" />

        <TextView
            android:id="@+id/namaPasar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasar Traditional Market"
            android:layout_below="@id/waktu"/>

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: Rp20000"
            android:layout_below="@id/namaPasar"/>

<!--        <TextView-->
<!--            android:id="@+id/statusBelanjaan"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Dalam Proses"-->
<!--            android:layout_toStartOf="@id/next"-->
<!--            android:layout_below="@id/namaPasar"-->
<!--            android:textColor="#86D863"/>-->
<!--        -->
        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>