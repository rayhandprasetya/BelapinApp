<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DaftarAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/tmblKembali"
            android:src="@drawable/ic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="tombol kembali"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/ayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/icon1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Ayo join belapin!"
        android:textColor="#000000"/>

    <ScrollView
        android:layout_below="@id/ayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/namaAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:textColor="#8D8D8D"
                android:hint="Nama Lengkap"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <EditText
                android:id="@+id/namaToko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="#8D8D8D"
                android:hint="Nama Pasar"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/namaAkun"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <EditText
                android:id="@+id/alamatLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColor="#8D8D8D"
                android:hint="Alamat Pasar"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/namaToko"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <EditText
                android:id="@+id/emailAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColor="#8D8D8D"
                android:hint="Email"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/alamatLengkap"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <EditText
                android:id="@+id/passwordAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:textColor="#8D8D8D"
                android:hint="Password"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/emailAkun"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <EditText
                android:id="@+id/passwordKonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:textColor="#8D8D8D"
                android:hint="Konfirmasi Password"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@id/passwordAkun"
                android:padding="15dp"
                android:background="@drawable/textbox"/>

            <Button
                android:id="@+id/tmblDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:layout_below="@id/passwordKonfirmasi"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:backgroundTint="#3CED97"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textbox"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>