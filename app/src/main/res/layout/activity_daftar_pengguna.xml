<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DaftarPengguna">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/tmblKembali"
            android:src="@drawable/ic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="tombol kembali"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/ayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/icon1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Let's grow with belapin!"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/namaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_below="@id/ayo"
        android:textColor="#8D8D8D"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:padding="15dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:id="@+id/emailAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:textColor="#8D8D8D"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_below="@id/namaAkun"
        android:padding="15dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:id="@+id/passwordAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColor="#8D8D8D"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_below="@id/emailAkun"
        android:padding="15dp"
        android:background="@drawable/textbox"/>

    <EditText
        android:id="@+id/passwordKonfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColor="#8D8D8D"
        android:hint="Confirm Password"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_below="@id/passwordAkun"
        android:padding="15dp"
        android:background="@drawable/textbox"/>

    <Button
        android:id="@+id/tmblDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/passwordKonfirmasi"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3CED97"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:background="@drawable/textbox"/>

    <TextView
        android:id="@+id/blmAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Are you admin? Register as admin" />

</RelativeLayout>