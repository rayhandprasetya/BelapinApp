<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambarBarang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/next"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@id/gambarBarang">

<!--            <TextView-->
<!--                android:id="@+id/hargaDiskonNote"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:textSize="10sp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/shape_rect5"-->
<!--                android:padding="5dp"-->
<!--                android:text="10% OFF"-->
<!--                android:textColor="#60F84D"/>-->

            <TextView
                android:id="@+id/judul"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:minLines="2"
                android:maxLines="2"
                android:layout_below="@id/judul"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tambahKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to cart"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_add"
                android:layout_below="@id/description"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@id/tambahKeranjang"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp">

<!--                <TextView-->
<!--                    android:id="@+id/hargaDiskon"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Rp9000"-->
<!--                    android:layout_marginEnd="10dp"-->
<!--                    android:textColor="#BBBBBB"/>-->

                <TextView
                    android:id="@+id/hargaAsli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp10000"
                    android:textColor="#BBBBBB"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/next"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>